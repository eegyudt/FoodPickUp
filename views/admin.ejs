<!DOCTYPE html>
<html lang="en">

<head>
  <title>admin</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/admin.css" />



  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/admin.js"></script>


</head>

<body>

  <div class="menu_page">
    <h1>Admin Dashboard</h1>
    <div id="orders"></div>

    <table class="orderContainer">
      <thead>
        <tr>
          <th scope="col">Order ID</th>
          <th scope="col">User ID</th>
          <th scope="col">Customer Name</th>
          <th scope="col">Phone</th>
          <th scope="col">Item Name</th>
          <th scope="col">Order Time</th>
          <th scope="col">Order Status</th>
        </tr>
      </thead>
      <tbody>
        <% for (let order of finalResult) { %>
          <tr class="orderDetail">
            <td class ='orderid'><%= order.orderid %></td>
            <td><%= order.userid %></td>
            <td class="nameSMS"><%= order.name %></td>
            <td class="phoneSMS"><%= order.phonenumber %></td>
            <td><%= order.orderedDishes.join(", ") %></td>
            <td><%= order.orderstarted %></td>
            <td>
              <form method="POST" action="/admin">
                <span class="textClass">
                  <input type="text" class="timeframe" name="timeframe" placeholder="mins" required />
                </span>
                <span class="smsBtn">
                  <button class="sendSMS" type="button">Send SMS</button>
                </span>
                <span class="complete">
                  <button class="completeBtn" type="button">Complete</button>
                </span>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

  </div>


</body>

</html>
